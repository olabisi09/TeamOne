@model IEnumerable<CyberProject.Entities.ApplicationRole>
@{
    ViewData["Title"] = "List Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="row" style="padding-top: 100px; padding-left: 50px;">
            <div class="col-lg-6">
                @if (Model.Any())
                {
                    <div class="main-card mb-3 card" style="width : 700px;">
                        <div class="card-body">
                            <h5 class="card-title">Roles</h5>
                            <table class="mb-0 table table-borderless">
                                <thead>
                                    <tr>
                                        <th>Role ID</th>
                                        <th>Role Name</th>
                                    </tr>
                                </thead>
                                @foreach (var role in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td scope="row">@role.Id</td>
                                            <td>@role.Name</td>
                                            <td class="dropdown">
                                                <a href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="fa fa-ellipsis-v"></i>
                                                </a>
                                                <div role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                                    <a asp-controller="Administrator" asp-action="EditRole" asp-route-id="@role.Id" tabindex="0" class="dropdown-item">Edit</a>
                                                    <a asp-controller="Administrator" asp-action="DeleteRole" asp-route-id="@role.Id" onclick="return confirm('Are you sure you want to delete the @role.Name role?')" tabindex="0" class="dropdown-item">Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="main-card mb-3 card" style="width : 700px;">
                        <div class="card-body">
                            <h5 class="card-title">No roles yet</h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>