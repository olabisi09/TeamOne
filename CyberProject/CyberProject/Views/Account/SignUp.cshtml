@model CyberProject.Models.SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/SignUpLayout.cshtml";
}


<div class="app-container app-theme-white body-tabs-shadow">
    <div class="app-container">
        <div class="h-100 bg-plum-plate bg-animation">
            <div class="d-flex h-100 justify-content-center align-items-center">
                <div class="mx-auto app-login-box col-md-8">
                    <div class="app-logo-inverse mx-auto mb-3"></div>
                    <div class="modal-dialog w-100 mx-auto">
                        <div class="modal-content" style="overflow: scroll; padding-top: 400px;">
                            <div class="modal-body">
                                <div class="h5 modal-title text-center">
                                    <h4 class="mt-2">
                                        <div>Welcome,</div>
                                        <span>It only takes a <span class="text-success">few seconds</span> to create your account</span>
                                    </h4>
                                </div>
                                <form class="" asp-controller="Account">
                                    <div class="form-row" asp-validation-summary="All">
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <span asp-validation-for="FirstName"></span>
                                                <input asp-for="FirstName" placeholder="First Name" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <span asp-validation-for="LastName"></span>
                                                <input asp-for="LastName" placeholder="Last Name" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Username" id="username" placeholder="Username" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Email" placeholder="Email here..." type="email" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="PhoneNo" placeholder="Phone Number" type="tel" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Faculty" placeholder="Faculty" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Department" placeholder="Department" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Country" placeholder="Country" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <select asp-for="State" class="mb-2 form-control">
                                                <option>State</option>
                                                <option>Lagos</option>
                                            </select>
                                        </div>
                                        <div class="col-md-12">
                                            <select asp-for="LGA" class="mb-2 form-control">
                                                <option>LGA</option>
                                                <option>Eti-Osa</option>
                                                <option>Ikeja</option>
                                            </select>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Grade" name="grade" id="grade" placeholder="Grade" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Level" placeholder="Level" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Step" placeholder="Step" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="position-relative form-group">
                                                <input asp-for="Password" placeholder="Password here..." type="password" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="position-relative form-check">
                                        <input name="check" id="exampleCheck" type="checkbox" class="form-check-input">
                                        <label for="exampleCheck" class="form-check-label">Keep me logged in</label>
                                    </div>

                                    <div class="float-right">
                                        <button asp-action="Signup" type="submit" class="btn btn-primary btn-lg">Login to Dashboard</button>
                                    </div>
                                </form>
                                @*<div class="divider"></div>
                                <h6 class="mb-0">No account? <a href="javascript:void(0);" class="text-primary">Sign up now</a></h6>*@
                            </div>
                            @*<div class="modal-footer clearfix">
                                <div class="float-left">
                                    <a href="javascript:void(0);" class="btn-lg btn btn-link">Recover Password</a>
                                </div>
                                
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>